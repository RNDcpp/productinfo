<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div id='delete_confirm_pane' class='new' hidden>
  <p>Confirm to delete product</p>
  <div id="delete_product_pane"></div>
  <div class="confirm_buttons">
    <button id="delete_button">delete</button>
    <button id="delete_cancel_button">cancel</button>
  </div>
</div>
<div id='search_product_pane' class='new'>
  <div id='search_product_form_container' >
    <%= render 'search_form', {element_id: 'searchForm'} %>
  </div>
</div>
<div id='new_product_pane' class='new'>
  <div id='new_product_form_container' hidden>
    <%= render 'form', {product: @product,element_id: 'newForm'} %>
  </div>
  <button id='new_product_pane_button'>
    new
  </button>
</div>
<div id='edit_product_pane' class='new'>
  <div id='edit_product_form_container' hidden>
    <%= render 'form', {product: @product,element_id: 'editForm'} %>
    <button id='edit_product_pane_button'>
      cancel
    </button>
  </div>
</div>
<div id='products-list'>
</div>
