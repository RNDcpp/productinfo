<%= form_with(model: product, local: true, id: element_id, html:{'data-type': 'json'}) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: "#{element_id}_product_name" %>
  </div>

  <div class="field">
    <%= form.label :image_uri %>
    <%= form.file_field :image_uri, id: "#{element_id}_product_image_uri" %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_field :text, id: "#{element_id}_product_text" %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost, id: "#{element_id}_product_cost" %>
  </div>

  <div class="actions">
    <%= form.submit 'create', class: "submit-button",disable_with: "..."%>
  </div>
<% end %>
